{
  "minify": true,
  "jsc": {
    "target": "es2022",
    "minify": {
      "keep_classnames": true,
      "mangle": true
    },
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "decoratorMetadata": true,
      "legacyDecorator": true
    },
    "keepClassNames": true,
    "externalHelpers": true,
    "loose": false
  },
  "module": {
    "type": "es6"
  },
  "sourceMaps": true,
  "exclude": [
    "vite.config.ts",
    ".*\\.spec.ts$$",
    ".*.js$"
  ]
}